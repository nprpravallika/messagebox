<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/androidimage"
    tools:context="com.example.dell.messageebox.LoginActivity">

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LbtnLogin"
        android:layout_marginStart="42dp"
        android:onClick="Login"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/LetPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/LetPassword"
        android:hint="Password"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="26dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_above="@+id/LbtnLogin"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/LetEmailAddress"
        android:layout_above="@+id/LetPassword"
        android:layout_alignStart="@+id/LetPassword"
        android:layout_marginBottom="15dp"
        android:hint="EmailAddress" />
</RelativeLayout>
